<?xml version="1.0" encoding="ISO-8859-1"?>

<aiml version="1.0">

   <category>
      <pattern> OLA * </pattern>
      <template>
         <random>
		<li>Ola, qual o seu nome?</li>
	 </random>
      </template>
   </category>

<!-- THATS -->
<category>
	<pattern>*</pattern>
	<that>OLA QUAL O SEU NOME</that>
	<template><think><set name = "username"><star/></set></think> Hey <get name= "username"/>! <srai>SERIE</srai></template>
</category>

<category>
	<pattern></pattern>
	<that></that>
	<template></template>
</category>


<!-- PERGUNTAS DO ROBOT SOBRE SERIE -->
<category>
<pattern> SERIE </pattern>
<template>
 <random>
	<li>Ja assistiu dexter?<think><set name = "topic">dexter</set></think></li>
	<li>Ja assistiu friends?<think><set name = "topic">friends</set></think></li>
	<li>Ja assistiu BreakingBad?<think><set name = "topic">breakingbad</set></think></li>	
	<li>Qual a sua serie favorita?</li>
 </random>
</template>
</category>

<!-- THAT PERGUNTAS DO ROBOT -->
<category>
	<pattern>*</pattern>
	<that>* QUAL A SUA SERIE FAVORITA</that>
	<template>
		<think><set name = "seriefavorita"><star/></set></think>
		<condition name = "seriefavorita" value = "dexter">
			Eu gosto muito de dexter!<think><set name = "topic">dexter</set></think> Me pergunte algo!
		</condition>
		<condition name = "seriefavorita" value = "friends">
			Eu gosto muito de friends!<think><set name = "topic">friends</set></think> Pergunte qualquer coisa sobre!
		</condition>
		<think><set name = "topic">none</set></think><srai>TESTE</srai>	
	</template>
</category>

</aiml>
